{% extends 'base.html.twig' %}

{% block title %}Me connecter !{% endblock %}

{% block body %}
{% include 'header.html.twig' %}
 <div class="container">
    <div class="card card-login mx-auto">
        <div class="card-header "><h3>Se connecter</h3></div>
        <div class="card-body">
            <form method="post">
                <div class="resultats" >
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            Vous êtes déja connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}"> Me déconnecter</a>
                        </div>
                    {% endif %} 
                </div>
                <div class="form-group text-center">
                    <div class="form-label-group">
                        <label for="inputLogin"><strong>Identifiant :</strong></label>
                        <input type="text" value="{{ last_username }}" name="login" id="inputLogin" class="form-control champs1" placeholder="login" autocomplete="username" required autofocus >
                    </div>
                </div>
                <div class="form-group text-center">
                    <div class="form-label-group">
                        <label for="inputPassword"><strong>Mot de passe :</strong></label>
                        <input type="password" name="password" id="inputPassword" class="form-control champs" placeholder="Mot de passe" autocomplete="current-password" required >
                    </div>
                    <input type="hidden" name="_csrf_token"value="{{ csrf_token('authenticate') }}">
                </div>
                <div class="soumis" class="row col-md-5">
                    <input type="submit" class="btn btn-primary" name="envoyer" value="Se connecter" />
                </div> 
            </form>
        </div>
    </div>
</div>
{% endblock %}
