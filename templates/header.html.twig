{# templates/header.html.twig #}
<header class="bg-dark py-3">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8 d-flex align-items-center">
                <a href="{{ path('app_accueil') }}"><img src="{{ asset('images/ua2.png') }}" alt="Logo de l'université" class="img-fluid" style="max-height: 100px;"></a>
                <a href="{{ path( app.user != null ? 'app_logout' : 'app_login' ) }}" class="btn btn-outline-light ml-5">{{ app.user != null ? 'Déconnexion' : 'Connexion' }}</a>
            </div>
            <div class="col-md-4 text-right">
                <form class="form-inline" action="{{ path('app_search') }}" method="get">
                    <input class="form-control mr-sm-2" type="text" name="search" placeholder="Rechercher..." value="{{ app.request.query.get('search') }}">
                    <button class="btn btn-outline-primary my-2 my-sm-0" type="submit"> Rechercher</button>
                </form>
            </div>
        </div>
    </div>
</header>
