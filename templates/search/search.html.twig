{% extends 'base.html.twig' %}

{% block title %}Hello SearchController!{% endblock %}

{% block body %}
    {% include 'header.html.twig' %}

    <div class="container mt-5">
        <h1>Résultats de la recherche</h1>

        {% if users is empty %}
            <div class="alert alert-warning" role="alert">
                Aucun résultat trouvé pour votre recherche.
            </div>
        {% else %}
            <div class="row">
                {% for user in users %}
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">{{ user.nom }} {{ user.prenom }}</h5>
                                <p class="card-text">
                                    <strong>Bureau:</strong> {{ user.bureau.numBureau }}<br>
                                    <strong>Statut:</strong> {{ user.statut.name }}<br>
                                    <strong>Date de sortie:</strong> {{ user.dateStart|date('d-m-Y') }}
                                </p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}

