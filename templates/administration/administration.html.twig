{% extends 'administration/baseAdmin.html.twig' %}
{% block title %} Administration {% endblock %}

{% block content %}
    {% for message in app.flashes('success') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
    {% endfor %}
	{% for message in app.flashes('notice') %}
    <div class="alert alert-danger">
        {{ message }}
    </div>
    {% endfor %}
	<div class="container-fluid">
		<div class="row jumbotron mt-5">
			<div class="col-xs-12 col-sm-12 col-md-9 col-lg-9 col-xl-10">
				<p class="lead"> <i class="fas fa-exclamation-circle"></i>&nbsp; &nbsp; Consulter les disponibilités par bureau :</p>
			</div>
		</div>
		<div>
        		<div class=" mt-3" >
        		<form method="post" action="{{ path('app_admin_dispo_bureau') }}">
            		<label for="bureau" >N° bureau: </label>
            		<select name="bureau" class="form-control">
                		{% for bureau in bureaux %}
							<option value="{{ bureau.id }}" >{{ bureau.numBureau }}</option>
						{% endfor %}
            		</select>
            		<input type="submit" class="btn btn-primary" value="Valider" />
        		</form>
				</div>
				{% if bureauInfo is defined %}
					<div class="mt-3">
						<table class="table table-striped">
						<thead>
							<th> Bureau </th>
							<th> Disponibilité </th>
						</thead>
						<tbody>
						<tr>
							<td>{{ bureauInfo }}</td>
							<td>{{ nbreTotal   }} / {{capaciteMax}}</td>
						</tr>
						</table>
					</div>
				{% endif %}
        </div>
	</div>
    
{% endblock %}
